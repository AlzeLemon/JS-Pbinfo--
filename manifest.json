{

  "manifest_version": 2,
  "name": "Pbinfo++",
  "version": "1.0",

  "browser_action": {
    "default_title": "Pbinfo++",
    "default_icon": "images/ext_logo.png"
},
  "description": "Pbinfo++",
  
  "content_scripts": [
    {
      "matches": ["*://*.pbinfo.ro/*"],
      "js": ["main.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.pbinfo.ro/probleme/*"],
      "js": ["rust.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.chatgptproxy.me/*"],
      "js": ["hijack.js"],
      "run_at": "document_end"
    }
  ]

}
